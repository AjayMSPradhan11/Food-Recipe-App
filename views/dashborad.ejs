<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
  </style>
</head>
<body>
  <h1>Users</h1>
  <a href="/auth/register"><button>Add New User</button></a>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((user) => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td>
            <form action="/users/delete/<%= user.id %>" method="POST" style="display: inline;">
              <button type="submit">Delete</button>
            </form>
            <a href="/users/edit/<%= user.id %>"><button>Edit</button></a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

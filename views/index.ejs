  <!-- Categories Start -->
  
  <style>
    .category__block {
      display: flex;
      flex-direction: column;
      align-items: center;
      background: #f8f9fa; /* Light gray background */
      padding: 1rem;
      border: 1px solid #ddd; /* Border for blocks */
      border-radius: 8px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
  
    .category__block:hover {
      transform: scale(1.05); /* Slight zoom on hover */
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }
  
    .category__img img {
      max-width: 100%;
      border-radius: 6px;
    }
  
    .category__button {
      width: 100%;
      font-size: 1rem;
      margin-top: 0.5rem;
      padding: 0.5rem;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-align: center;
      text-decoration: none;
      display: block;
      transition: background-color 0.2s ease;
    }
  
    .category__button:hover {
      background-color: #0056b3;
    }
  </style>
  
  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != '') { %>
      <% categories.forEach(function(category, index) { %>
        <div class="col text-center category__block">
          <a href="/categories/<%- category.name %>" class="category__link">
            <div class="category__img shadow">
              <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
            </div>
            <button class="category__button"><%- category.name %></button>
          </a>
        </div>
      <% }) %>
    <% } %>
  
    <!-- "View All Categories" block -->
    <div class="col text-center category__block">
      <a href="/categories" class="category__link">
        <div class="category__img shadow">
          <img src="img/view-all.jpg" alt="View All Categories" loading="lazy">
        </div>
        <button class="category__button">View All</button>
      </a>
    </div>
  </div>
  
  
